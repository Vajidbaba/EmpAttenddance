@model Common.Core.ViewModels.AttendanceFormViewModel
@using App.Admin.Web.Helpers
@{
    var start = DateTime.Today.StartOfWeek(DayOfWeek.Monday);
    var daysOfWeek = Enumerable.Range(0, 7).Select(i => start.AddDays(i)).ToList();
}


<div class="card shadow-sm rounded-2">
    <div class="card-header rounded-top bg-dark  text-white text-sm px-3 py-1">
        <div class="text-white text-sm fw-bold">Mark Attendance</div>
    </div>
    <div class="card-body p-3">

        <div class="week-days">
            @foreach (var day in daysOfWeek)
            {
                var isWeekend = day.DayOfWeek == DayOfWeek.Sunday;
                var isToday = day.Date == DateTime.Today;

                var cssClass = isToday ? "current-day" : (isWeekend ? "weekend" : "weekday");

                <div class="@cssClass" title="@day.ToString("dddd, MMM dd yyyy")">
                    @day.ToString("ddd dd")
                </div>
            }
        </div>
        <form method="post" asp-action="Add" id="attendanceForm">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="EmployeeId" />
            <input type="hidden" asp-for="EmployeeName" />
            <div class="row mb-3">
                <div class="col-md-6">
                    <label class="form-label">Today Date</label>
                    <input asp-for="AttendanceDate" type="date" class="form-control form-control-sm" readonly />
                </div>
                <div class="col-md-6">
                    <label class="form-label">Employee Name</label>
                    <input asp-for="EmployeeName" class="form-control form-control-sm" readonly />
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label">Attendance</label>
                <div class="d-flex gap-3">
                    @foreach (var status in new[] { "Present", "Absent", "Half Day", "Leave" })
                    {
                        <div class="form-check">
                            <input class="form-check-input"
                                   type="radio"
                                   asp-for="AttendanceStatus"
                                   name="AttendanceStatus"
                                   value="@status" />
                            <label class="form-check-label">@status</label>
                        </div>
                    }
                </div>
                <span asp-validation-for="AttendanceStatus" class="text-danger small"></span>
            </div>
            <hr/>

            <div id="leaveSection" class="mt-3" style="display: none;">
                <div class="row">
                    <div class="col-md-4">
                        <label asp-for="LeaveType">Leave Type</label>
                        <select asp-for="LeaveType" asp-items="ViewBag.LeaveList" class="form-select form-select-sm">
                            <option value="">-- Select Type --</option>
                        </select>
                        <span asp-validation-for="LeaveType" class="text-danger"></span>
                    </div>
                    <div class="col-md-4">
                        <label class="form-label">Leave Start Date</label>
                        <input type="date" asp-for="StartDate" class="form-control form-control-sm" id="LeaveStartDate" />
                    </div>
                    <div class="col-md-4">
                        <label class="form-label">Leave End Date</label>
                        <input type="date" asp-for="EndDate" class="form-control form-control-sm" id="LeaveEndDate" />
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-4">
                        <label class="form-label">Total Days</label>
                        <input type="number" asp-for="TotalDays" class="form-control form-control-sm" id="TotalDays" readonly />
                    </div>
                </div>

                <div class="mt-2">
                    <div class="row">
                        <div class="row">
                            <div class="col-md-3">
                                <p class="text-sm">Sick Used: <b>@Model.SickLeavesUsed</b></p>
                                <p class="text-sm">Sick Balance: <b>@Model.SickLeavesBalance</b></p>
                            </div>
                            <div class="col-md-3">
                                <p class="text-sm">Casual Used: <b>@Model.CasualLeavesUsed</b></p>
                                <p class="text-sm">Casual Balance: <b>@Model.CasualLeavesBalance</b></p>
                            </div>
                            <div class="col-md-3">
                                <p class="text-sm">Paid Used: <b>@Model.PaidLeavesUsed</b></p>
                                <p class="text-sm">Paid Balance: <b>@Model.PaidLeavesBalance</b></p>
                            </div>
                            <div class="col-md-3">
                                <p class="text-sm">Unpaid Used: <b>@Model.UnpaidLeavesUsed</b></p>
                                <p class="text-sm">Unpaid Balance: <b>@Model.UnpaidLeavesBalance</b></p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <hr />

            <div class="row mb-3">
                <div class="col-md-3">
                    <label class="form-label">Overtime(hours)</label>
                    <input asp-for="TotalOvertimeHours" class="form-control form-control-sm" placeholder="Hours" />
                </div>
                <div class="col-md-3">
                    <label class="form-label">Advance/Loan</label>
                    <input asp-for="AdvancePay" class="form-control form-control-sm" placeholder="&#8377; 0.0" />
                </div>
                <div class="col-md-3">
                    <label class="form-label">Bonus</label>
                    <input asp-for="Bonus" class="form-control form-control-sm" placeholder="&#8377;  0.0" />
                </div>
                <div class="col-md-3">
                    <label class="form-label">Deduction</label>
                    <input asp-for="Deducation" class="form-control form-control-sm" placeholder="&#8377;  0.0" />
                </div>
            </div>
            <div class="d-flex justify-content-end gap-2 pt-3 border-top">
                <button type="submit" class="btn btn-dark btn-sm mb-0">
                    Save
                </button>
                <button type="button" class="btn btn-light btn-sm mb-0" data-bs-dismiss="offcanvas">Cancel</button>
            </div>
        </form>
    </div>
</div>
