@model List<Common.Core.ViewModels.EmployeeWithAttendanceStatus>
@{
    ViewData["Title"] = "Attendance";
}
<link rel="stylesheet" href="https://cdn.datatables.net/1.13.4/css/jquery.dataTables.min.css">

<div class="card rounded-2 my-3">
    <div class="card-header rounded-top bg-dark text-white text-sm px-3 py-1 d-flex align-items-center">
        <h6 class="mb-0 text-white text-sm me-auto"> Attendance</h6>
        <a onclick="ViewSummery()" class="btn btn-light btn-sm py-1 rounded-1 px-3 m-0 ms-auto"> <i class="fa fa-list me-2"></i> Summery</a>
    </div>
    <div class="card-body p-1">
        <div class="table-responsive" style="border:1px solid #ddd">
            <table id="attendance" class="table table-sm table-striped table-hover mb-0 dt-responsive nowrap w-100 small align-middle">
                <thead>
                    <tr>
                        <th class="p-1 ps-2">Name</th>
                        <th class="p-1 ps-2">Contact</th>
                        <th class="p-1 ps-2">Status</th>
                        <th class="p-1 ps-2">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="p-1 ps-2">@item.Name</td>
                            <td class="p-1 ps-2">@item.Contact</td>
                            <td class="p-1 ps-2 ">
                                <div class="status status-@item.AttendanceStatus.Replace(" ", "")">@item.AttendanceStatus</div>
                            </td>
                            <td class="p-1 ps-2">
                                <a href="javascript:void(0);" onclick="Add(@item.Id)" class="btn btn-dark btn-sm mb-0 px-3 py-1">
                                    <i class="fa fa-arrow-right"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Offcanvas Add -->
<div class="offcanvas offcanvas-end w-50" tabindex="-1" id="attModal" aria-labelledby="employeeDetailsLabel">
    <div class="offcanvas-body" id="addDetailsContent">
    </div>
</div>

<!-- Offcanvas Summery -->
<div class="offcanvas offcanvas-end w-75" tabindex="-1" id="summery" aria-labelledby="summeryContent">
    <div class="offcanvas-body" id="summeryContent">
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.7.1.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/responsive/2.5.0/js/dataTables.responsive.min.js"></script>
    <script type="text/javascript">
          
        $("form").submit(function(e) {
            e.preventDefault();
            var form = $(this);
            var url = form.attr("action");
            $.ajax({
                type: "POST",
                url: url,
                data: form.serialize(),
                success: function(response) {
                    if(response.success){
                        alert(response.message);
                        var offcanvasEl = document.getElementById('attModal');
                        var offcanvas = bootstrap.Offcanvas.getInstance(offcanvasEl);
                        offcanvas.hide();
                    } else {
                        alert("Error: " + response.message);
                    }
                },
                error: function() {
                    alert("Something went wrong");
                }
            });
        });
        function Add(id) {
            $.ajax({
                url: '@Url.Content("~/admin/markattendance/add")',
                type: 'GET',
                data: { id: id },
                success: function (result) {
                    $("#addDetailsContent").html(result);
                    var offcanvas = new bootstrap.Offcanvas(document.getElementById('attModal'));
                    offcanvas.show();

                    setTimeout(function () {
                        var today = new Date().toISOString().split("T")[0];
                        $("#AttendanceDate").val(today);
                    }, 100);
                },
                error: function () {
                    $("#addDetailsContent").html('<p class="text-danger">❌ Failed to load details.</p>');
                }
            });
        }

        function ViewSummery(id) {
            $.ajax({
                url: '@Url.Content("~/admin/markattendance/summery")',
                type: 'GET',
                data: { id: id },
                success: function (result) {
                    $("#summeryContent").html(result);
                    var offcanvas = new bootstrap.Offcanvas(document.getElementById('summery'));
                    offcanvas.show();
                      $('#attendanceSummery').DataTable({
                          responsive: true,
                          searching: true,
                          lengthChange: false,
                      });
                },
                error: function () {
                    $("#summeryContent").html('<p class="text-danger">❌ Failed to load details.</p>');
                }
            });
            }    
            
           $(document).on("change", "input[name='AttendanceStatus']", function () {
            const selected = $(this).val();
            if (selected === "Leave") {
                $("#leaveSection").slideDown();
            } else {
                $("#leaveSection").slideUp();
            }
            if (selected === "Present" || selected === "Absent" || selected === "Half Day") {
              $("#LeaveStartDate").val("");
              $("#LeaveEndDate").val("");
            }
        });
        $(document).on("change", "#LeaveStartDate", function () {
            calculateTotalLeaveDays();
        });


           $(document).on("change", "#LeaveEndDate", function () {
            const start = new Date($("#LeaveStartDate").val());
            const end = new Date($(this).val());

            if (!$("#LeaveStartDate").val()) {
                alert("Please select Leave Start Date first.");
                $("#LeaveEndDate").val("");
                return;
            }

            if (start > end) {
                alert("❌ Leave Start Date must be less than or equal to Leave End Date.");
                $("#LeaveEndDate").val(""); 
                $("#TotalDays").val("");
                return;
            }
            calculateTotalLeaveDays();
        });
         $(document).ready(function () {
               const initialStatus = $("input[name='AttendanceStatus']:checked").val();
                if (initialStatus === "Leave") {
                    $("#leaveSection").show();
                }
            $('#attendance').DataTable({
                responsive: true,
                searching: true,
                lengthChange: false,
            });

        });
        function calculateTotalLeaveDays() {
            const start = new Date($("#LeaveStartDate").val());
            const end = new Date($("#LeaveEndDate").val());

            if (!isNaN(start) && !isNaN(end) && start <= end) {
                const timeDiff = end - start;
                const dayDiff = Math.ceil(timeDiff / (1000 * 60 * 60 * 24)) + 1; // +1 to include both dates
                $("#TotalDays").val(dayDiff);
            } else {
                $("#TotalDays").val("");
            }
        }

    </script>
}
