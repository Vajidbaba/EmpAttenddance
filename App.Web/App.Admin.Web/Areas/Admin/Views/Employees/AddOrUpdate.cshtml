@model EmployeeModel
@{
    ViewData["Title"] = "Add Employee";
}
<style>
  label{
    margin-bottom:0px;
  }
</style>
<div class="card mt-2 rounded-2">
    <form method="post" asp-action="AddOrUpdate">
        <div class="card-header rounded-top bg-dark  text-white text-sm px-3 py-1">
            <span >@(Model.Id > 0 ? "Update Employee" : "Add Employee")</span>
        </div>
        <div class="card-body p-3">
            <input type="hidden" asp-for="Id" />
            <div class="row">
                <div class="col-md-4">
                    <div class="form-group mb-2">
                        <label class="required" asp-for="Name">Name:</label>
                        <input type="text" asp-for="Name" class="form-control form-control-sm" required />
                    </div>
                    <div class="form-group mb-2">
                        <label class="required">Father Name:</label>
                        <input type="text" asp-for="FatherName" class="form-control form-control-sm" required />
                    </div>
                    <div class="form-group mb-2">
                        <label class="required">Mobile/Phone Number:</label>
                        <input type="text" asp-for="Contact" class="form-control form-control-sm" required />
                    </div>
                    <div class="form-group mb-2">
                        <label class="required">Email:</label>
                        <input type="email" asp-for="Email" class="form-control form-control-sm" required />
                    </div>

                </div>
                <div class="col-md-4">
                    <div class="form-group mb-2">
                        <label class="required">Date Of Joining:</label>
                        <input type="date" asp-for="DateOfJoining" class="form-control form-control-sm" required />
                    </div>
                    <div class="form-group mb-2">
                        <label>Department:</label>
                        <input type="text" asp-for="Department" class="form-control form-control-sm" placeholder="(Optional)" />
                    </div>
                    <div class="form-group mb-2">
                        <label>Role:</label>
                        <input type="text" asp-for="Role" class="form-control form-control-sm" placeholder="(Optional)" />
                    </div>
                     <div class="form-group mb-2">
                        <label>Date Of Resign:</label>
                        <input type="date" asp-for="DateOfResign" class="form-control form-control-sm" placeholder="(Optional)" />
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group mb-2">
                        <label>City:</label>
                        <input type="text" asp-for="City" class="form-control form-control-sm" placeholder="(Optional)" />
                    </div>
                    <div class="form-group mb-2">
                        <label class="required">State:</label>
                        <input type="text" asp-for="State" class="form-control form-control-sm" required />
                    </div>
                    <div class="form-group mb-2">
                        <label class="required">Pin:</label>
                        <input type="text" asp-for="Pin" class="form-control form-control-sm" required />
                    </div>
                    <div class="form-group mb-2">
                        <label class="required">Address:</label>
                        <textarea asp-for="Address" class="form-control form-control-sm" rows="1" required></textarea>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6 text-start">

                <div class="form-group mb-0">
                    <div class="form-check">
                        <label class="form-check-label" for="Active">Active</label>
                        <input type="checkbox" asp-for="Active" class="form-check-input" />
                    </div>
                </div>
                </div>
                <div class="col-md-6 text-end">
                    <button type="submit" class="btn btn-dark px-3 btn-sm">
                        @(Model.Id > 0 ? "Update Employee" : "Add Employee")
                    </button>
                    <a href="@Url.Action("List", "Employees")" class="btn btn-outline-dark btn-sm px-3">Cancel</a>
                </div>
            </div>
        </div>
    </form>
</div>