@model EmployeeModel
<style>
  strong{
    font-size:14px;
  }
  span{
        font-size: 14px;
    }
</style>
<div class="card border-1  rounded-2">
    <div class="card-body">
        <div class="row g-4">
            <div class="col-md-6">
                <div class="d-flex">
                    <strong class="me-2 text-muted w-50">ID:</strong>
                    <span>@Model.Id</span>
                </div>
                <div class="d-flex">
                    <strong class="me-2 text-muted w-50">Name:</strong>
                    <span>@Model.Name</span>
                </div>
                <div class="d-flex">
                    <strong class="me-2 text-muted w-50">FatherName:</strong>
                    <span>@Model.FatherName</span>
                </div>
                <div class="d-flex">
                    <strong class="me-2 text-muted w-50">Email:</strong>
                    <span>@Model.Email</span>
                </div>
                <div class="d-flex">
                    <strong class="me-2 text-muted w-50">Contact:</strong>
                    <span>@Model.Contact</span>
                </div>
                <div class="d-flex">
                    <strong class="me-2 text-muted w-50">Department:</strong>
                    <span>@Model.Department</span>
                </div>
                <div class="d-flex">
                    <strong class="me-2 text-muted w-50">Role:</strong>
                    <span>@Model.Role</span>
                </div>

               
            </div>

            <div class="col-md-6">
                <div class="d-flex">
                    <strong class="me-2 text-muted w-50">Joining Date:</strong>
                    <span>@Model.DateOfJoining?.ToShortDateString()</span>
                </div>
                <div class="d-flex">
                    <strong class="me-2 text-muted w-50">Resigning Date:</strong>
                    <span>@Model.DateOfResign?.ToShortDateString()</span>
                </div>
            

                <div class="d-flex">
                    <strong class="me-2 text-muted w-50">City:</strong>
                    <span>@Model.City</span>
                </div>

                <div class="d-flex">
                    <strong class="me-2 text-muted w-50">State :</strong>
                    <span>@Model.State</span>
                </div>

                <div class="d-flex">
                    <strong class="me-2 text-muted w-50">Pin :</strong>
                    <span>@Model.Pin</span>
                </div>
                <div class="d-flex">
                    <strong class="me-2 text-muted w-50">Address :</strong>
                    <span>@Model.Address</span>
                </div>
                <div class="d-flex">
                    <strong class="me-2 text-muted w-50">Active:</strong>
                    <div style="color: @(Model.Active ? "green" : "red")" class="@(Model.Active ? "fa fa-check-circle" : "fa fa-times-circle")"></div>
                </div>
            </div>
        </div>
    </div>
</div>
