@model Common.Core.ViewModels.SalaryViewModel
@using System.Globalization

<form asp-action="PostAddOrUpdate" method="post">
    @Html.HiddenFor(m => m.Id)

    <div class="mb-2">
        <label asp-for="EmployeeId" class="form-label">Employee ID</label>
        <input asp-for="EmployeeId" class="form-control form-control-sm" />
        <span asp-validation-for="EmployeeId" class="text-danger small"></span>
    </div>

    <div class="mb-2 row">
        <div class="col">
            <label asp-for="Month" class="form-label">Month</label>
            <select asp-for="Month" class="form-select form-select-sm">
                @for (int i = 1; i <= 12; i++)
                {
                    <option value="@i">@CultureInfo.CurrentCulture.DateTimeFormat.GetMonthName(i)</option>
                }
            </select>
        </div>
        <div class="col">
            <label asp-for="Year" class="form-label">Year</label>
            <input asp-for="Year" class="form-control form-control-sm" />
        </div>
    </div>

    <div class="mb-2">
        <label asp-for="BaseSalary" class="form-label">Base Salary</label>
        <input asp-for="BaseSalary" class="form-control form-control-sm" id="BaseSalary" />
    </div>

    <div class="mb-2">
        <label asp-for="OvertimePay" class="form-label">Overtime Pay</label>
        <input asp-for="OvertimePay" class="form-control form-control-sm" id="OvertimePay" />
    </div>

    <div class="mb-2">
        <label asp-for="Bonus" class="form-label">Bonus</label>
        <input asp-for="Bonus" class="form-control form-control-sm" />
    </div>

    <div class="mb-2">
        <label asp-for="Advance" class="form-label">Advance</label>
        <input asp-for="Advance" class="form-control form-control-sm" />
    </div>

    <div class="mb-2">
        <label asp-for="Deduction" class="form-label">Deduction</label>
        <input asp-for="Deduction" class="form-control form-control-sm" id="Deductions" />
    </div>

    <div class="mb-2">
        <label asp-for="NetSalary" class="form-label">Net Salary</label>
        <input asp-for="NetSalary" class="form-control form-control-sm" id="NetSalary" readonly />
    </div>

    <div class="mb-2">
        <label asp-for="PaymentDate" class="form-label">Payment Date</label>
        <input asp-for="PaymentDate" class="form-control form-control-sm" type="date" />
    </div>

    <div class="mb-3 form-check">
        <input asp-for="IsPaid" class="form-check-input" type="checkbox" />
        <label asp-for="IsPaid" class="form-check-label">Is Paid?</label>
    </div>

    <button type="submit" class="btn btn-success btn-sm">Save</button>
</form>
