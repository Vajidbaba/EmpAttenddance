@model List<Common.Core.ViewModels.SalaryViewModel>
@using System.Globalization
@{
    ViewData["Title"] = "Salaries";
}
<link rel="stylesheet" href="https://cdn.datatables.net/1.13.4/css/jquery.dataTables.min.css">

<div class="card rounded-2 mt-3">
    <div class="card-header rounded-top bg-dark text-white text-sm px-3 py-1 d-flex align-items-center">
        <h6 class="mb-0 text-white text-sm me-auto">
            @ViewData["Title"]
        </h6>
    </div>
    <div class="card-body p-1">
        <div class="table-responsive" style="border:1px solid #ddd">
            <table id="employeesTable" class="table table-sm table-striped table-hover mb-0 dt-responsive nowrap w-100 small align-middle">
                <thead>
                    <tr>
                        <th class="p-1 ps-2">ID</th>
                        <th class="p-1 ps-2">Employee Name</th>
                        <th class="p-1 ps-2">Base Salary</th>
                        <th class="p-1 ps-2">Net Salary</th>
                        <th class="p-1 ps-2">Overtime Hours</th>
                        <th class="p-1 ps-2">Working Days</th>
                        <th class="p-1 ps-2">Present Days</th>
                        <th class="p-1 ps-2">Overtime Pay</th>
                        <th class="p-1 ps-2">Deduction</th>
                        <th class="p-1 ps-2">Status</th>
                        <th class="p-1 ps-2">Actions</th>
                    </tr>
                </thead>
                 <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="p-1 ps-2">@item.EmployeeId</td>
                            <td class="p-1 ps-2">@item.EmployeeName</td>
                            <td class="p-1 ps-2">@item.BaseSalary</td>
                            <td class="p-1 ps-2">@item.NetSalary</td>
                            <td class="p-1 ps-2">@item.OvertimeHours</td>
                            <td class="p-1 ps-2">@item.WorkingDays</td>
                            <td class="p-1 ps-2">@item.PresentDays</td>
                            <td class="p-1 ps-2">@item.OvertimePay</td>
                            <td class="p-1 ps-2">@item.Deduction</td>
                            <td class="p-1 ps-2">
                                @if (item.IsPaid)
                                {
                                    <span class="badge bg-success">Paid</span>
                                }
                                else
                                {
                                    <span class="badge bg-warning text-dark">Pending</span>
                                }
                            </td>
                            <td class="p-1 ps-2">
                                <a href="javascript:void(0);" class="btn btn-dark btn-sm mb-0 px-3 py-1">
                                    <i class="fa fa-edit"></i>
                                </a>
                                <a href="javascript:void(0);" class="btn btn-primary btn-sm mb-0 px-3 py-1" onclick="calculateSalary(@item.EmployeeId)">
                                    <i class="fa fa-calculator"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

</div>
<!-- Offcanvas Summery -->
<div class="offcanvas offcanvas-end w-50" tabindex="-1" id="salaryId" aria-labelledby="salaryContent">
    <div class="offcanvas-body" id="salaryContent">
    </div>
</div>
@section Scripts {
    <script src="https://code.jquery.com/jquery-3.7.1.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/responsive/2.5.0/js/dataTables.responsive.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#employeesTable').DataTable({
                responsive: true,
                lengthChange: false,
                autoWidth: false
            });
        });

          function calculateSalary(id) {
            $.ajax({
                url: '@Url.Content("~/admin/salaries/calculatesalary")',
                type: 'GET',
                data: { id: id },
                success: function (result) {
                    $("#salaryContent").html(result);
                    var offcanvas = new bootstrap.Offcanvas(document.getElementById('salaryId'));
                    offcanvas.show();
                },
                error: function () {
                    $("#salaryContent").html('<p class="text-danger">❌ Failed to load details.</p>');
                }
            });
        }

    </script>
}
