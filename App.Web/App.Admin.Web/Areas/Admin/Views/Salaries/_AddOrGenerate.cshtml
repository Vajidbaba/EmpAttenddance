@model Common.Core.ViewModels.SalaryViewModel

<style>
    td {
        padding: 5px 12px !important;
        font-size:12px;
    }

    th {
        padding: 0 12px !important;
        font-size: 12px;
    }

</style>
<div class="card shadow-sm rounded-2">
    <div class="card-header rounded-top bg-dark  text-white text-sm px-3 py-1">
        <div class="text-white text-sm fw-bold">Salary Details for @Model.EmployeeName (@Model.Month/@Model.Year)</div>
    </div>
    <div class="card-body p-2">
        <div class="salary-details">
            <table class="table table-sm table-striped table-hover mb-0 dt-responsive nowrap w-100 small align-middle">
                <tbody>
                    <tr>
                        <th>Employee ID</th>
                        <td>@Model.EmployeeId</td>
                    </tr>
                    <tr>
                        <th>Payment Date</th>
                        <td>@Model.PaymentDate.ToString("dd MMM yyyy")</td>
                    </tr>
                    <tr>
                        <th>Base Salary</th>
                        <td>@Model.BaseSalary.ToString("C")</td>
                    </tr>
                    <tr>
                        <th>Working Days</th>
                        <td>@Model.WorkingDays</td>
                    </tr>
                    <tr>
                        <th>Present Days</th>
                        <td>@Model.PresentDays</td>
                    </tr>
                    <tr>
                        <th>Leave Days</th>
                        <td>@Model.LeaveDays</td>
                    </tr>
                    <tr>
                        <th>Absent Days</th>
                        <td>@Model.AbsentDays</td>
                    </tr>
                    <tr>
                        <th>Overtime Hours</th>
                        <td>@Model.OvertimeHours</td>
                    </tr>
                    <tr>
                        <th>Overtime Pay</th>
                        <td>@Model.OvertimePay.ToString("C")</td>
                    </tr>
                    <tr>
                        <th>Bonus</th>
                        <td>@Model.Bonus.ToString("C")</td>
                    </tr>
                    <tr>
                        <th>Advance</th>
                        <td>@Model.Advance.ToString("C")</td>
                    </tr>
                    <tr>
                        <th>Deduction</th>
                        <td>@Model.Deduction.ToString("C")</td>
                    </tr>
                    <tr>
                        <th>Net Salary</th>
                        <td><strong>@Model.NetSalary.ToString("C")</strong></td>
                    </tr>
                    <tr>
                        <th>Overtime Type</th>
                        <td>@Model.OTtype</td>
                    </tr>
                    <tr>
                        <th>Is Paid</th>
                        <td>@(Model.IsPaid ? "Yes" : "No")</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>