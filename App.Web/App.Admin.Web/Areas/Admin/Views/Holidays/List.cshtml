@model List<Holidays>
@{
    ViewData["Title"] = "Holidays";
}
<link rel="stylesheet" href="https://cdn.datatables.net/1.13.4/css/jquery.dataTables.min.css">

<div class="card rounded-2 mt-3">
    <div class="card-header rounded-top bg-dark text-white text-sm px-3 py-1 d-flex align-items-center">
        <h6 class="mb-0 text-white text-sm me-auto">Holiday</h6>
        <button id="btnAdd" class="btn btn-light btn-sm py-1 rounded-1 px-3 m-0 ms-auto">
            <i class="fa fa-plus me-2"></i> Add Holiday
        </button>
    </div>
    <div class="card-body p-1">
        <table id="holidays" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th class="p-1 ps-2">Date</th>
                    <th class="p-1 ps-2">Reason</th>
                    <th class="p-1 ps-2">Weekend</th>
                    <th class="p-1 ps-2">Company Holiday</th>
                    <th class="p-1 ps-2">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var h in Model)
                {
                    <tr>
                        <td class="p-1 ps-2">@h.Date.ToString("yyyy-MM-dd")</td>
                        <td class="p-1 ps-2">@h.Reason</td>
                        <td class="p-1 ps-2">@(h.IsWeekend ? "Yes" : "No")</td>
                        <td class="p-1 ps-2">@(h.IsCompanyHoliday ? "Yes" : "No")</td>
                        <td class="p-1 ps-2">
                            <button data-id="@h.Id" class="btn btn-dark btn-sm mb-0 px-3 py-1 btn-edit">
                                <i class="fa fa-edit"></i>
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="holidayModal" tabindex="-1" aria-labelledby="holidayModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content" id="modalContent"></div>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.7.1.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/responsive/2.5.0/js/dataTables.responsive.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#holidays').DataTable({
                responsive: true,
                searching: true,
                lengthChange: false,
            });
        });

        $(function () {
            var modal = new bootstrap.Modal(document.getElementById('holidayModal'));

            $('#btnAdd').click(function () {
                var url = '@Url.Content("~/admin/holidays/addoredit")';
                $.get(url, function (data) {
                    $('#modalContent').html(data);
                    modal.show();
                });
            });

            $(document).on('click', '.btn-edit', function () {
                var id = $(this).data('id');
                var url = '@Url.Content("~/admin/holidays/addoredit")';
                $.get(url, { id: id }, function (data) {
                    $('#modalContent').html(data);
                    modal.show();
                });
            });

            $('#modalContent').on('submit', 'form', function (e) {
                e.preventDefault();
                var form = $(this);

                $.ajax({
                    url: form.attr('action'),
                    type: form.attr('method'),
                    data: form.serialize(),
                    success: function (response) {
                        if (response.isValid) {
                            modal.hide();
                            location.reload();
                        } else {
                            $('#modalContent').html(response);
                        }
                    },
                    error: function () {
                        alert('Error occurred while saving data.');
                    }
                });
            });
        });
    </script>
}
