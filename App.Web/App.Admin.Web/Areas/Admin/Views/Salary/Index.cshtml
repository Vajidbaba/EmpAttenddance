@model List<Common.Core.ViewModels.SalaryListDto>

@{
    ViewData["Title"] = "Salary List";
}

<h2>Salary List for @Model.FirstOrDefault()?.Month ?? 0 / @Model.FirstOrDefault()?.Year ?? 0</h2>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Employee ID</th>
            <th>Name</th>
            <th>Month</th>
            <th>Year</th>
            <th>Net Salary</th>
            <th>Details</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.EmployeeId</td>
                <td>@item.EmployeeName</td>
                <td>@item.Month</td>
                <td>@item.Year</td>
                <td>@item.NetSalary.ToString("C")</td>
                <td>
                    <a asp-controller="Salary" asp-action="SalaryDetails" asp-route-employeeId="@item.EmployeeId" asp-route-year="@item.Year" asp-route-month="@item.Month">
                        View
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
